    <include layout="@layout/pkg_ui_listitem_line2"/>
    <include android:id="@+id/item_myservice" layout="@layout/pkg_ui_listitem_text" />
    <include layout="@layout/pkg_ui_listitem_line1"/>
    <include android:id="@+id/item_feedback" layout="@layout/pkg_ui_listitem_text" />
    <include layout="@layout/pkg_ui_listitem_line2"/>
    <include android:id="@+id/item_settings" layout="@layout/pkg_ui_listitem_text" />
    <include layout="@layout/pkg_ui_listitem_line2"/>
    <include android:id="@+id/item_logout" layout="@layout/pkg_ui_listitem_text" />
    <include layout="@layout/pkg_ui_listitem_line1"/>
    <include android:id="@+id/item_exit" layout="@layout/pkg_ui_listitem_text" />
    <include layout="@layout/pkg_ui_listitem_line1"/>
</LinearLayout>
