<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_header"
        layout="@layout/pkg_ui_layout_activity_header" />

    <include layout="@layout/pkg_ui_listitem_line1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/layout_accounte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_label_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:textColor="@color/black"
                android:text="交易账号" >
            </TextView>

            <EditText
                android:id="@+id/edt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background" 
                android:textColor="@color/black"
                android:minHeight="25dip"
                android:minWidth="100dip" >
            </EditText>
        </RelativeLayout>

        <include layout="@layout/pkg_ui_listitem_line1" />

        <RelativeLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:layout_below="@id/layout_stockcode"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_label_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:textColor="@color/black"
                android:text="交易密码" >
            </TextView>

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_label_pricemode"
                android:background="@drawable/edittext_background" 
                android:textColor="@color/black"
                android:minHeight="25dip"
                android:minWidth="100dip">
            </EditText>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>