<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_alignParentBottom="true"
        android:background="@color/font_gray_1" >

        <TextView
            android:id="@+id/txt_quote_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="4dip"
            android:text="17.45"
            android:textColor="@color/red"
            android:textSize="17sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_quote_priceoffset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_quote_price"
            android:layout_marginLeft="8dip"
            android:text="+0.36"
            android:textColor="@color/red"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_quote_priceoffsetrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_quote_price"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/txt_quote_priceoffset"
            android:text="+2.11%"
            android:textColor="@color/red"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_quote_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:minWidth="40dip"
            android:text="43.58"
            android:textColor="@color/red"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_quote_highlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/txt_quote_high"
            android:text="最高"
            android:textColor="@color/black"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_stockquote_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/txt_quote_highlabel"
            android:minWidth="40dip"
            android:text="43.58"
            android:textColor="@color/red"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_quote_openlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/txt_stockquote_open"
            android:text="开盘"
            android:textColor="@color/black"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_stockquote_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_quote_high"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:minWidth="40dip"
            android:text="43.58"
            android:textColor="@color/red"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_stockquote_lowlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_quote_highlabel"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/txt_stockquote_low"
            android:text="最低"
            android:textColor="@color/black"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_stockquote_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_quote_high"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/txt_stockquote_lowlabel"
            android:minWidth="40dip"
            android:text="43.58"
            android:textColor="@color/red"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/txt_stockquote_closelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_quote_highlabel"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:layout_toLeftOf="@id/txt_stockquote_close"
            android:text="昨收"
            android:textColor="@color/black"
            android:textSize="12sp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom" >

        <RelativeLayout
            android:id="@+id/view_stockinfo"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_stockchart"
            android:layout_toLeftOf="@id/view_stockinfo" 
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>